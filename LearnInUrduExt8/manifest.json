{
  "manifest_version": 2,
  "name": "Learn in Urdu Extension 8",
  "version": "8",
	"browser_action":{
        "default_icon":"icon.png",
		"default_popup": "popup.html"
    },
	"background":{
        "scripts": ["scripts/background.js"],
		"persistent": false
    },
  "permissions": [
       "tabs"
   ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/jquery-2.2.4.min.js","scripts/content.js"]
    }
  ]
}




