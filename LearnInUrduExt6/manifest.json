{
  "manifest_version": 2,
  "name": "Learn In Urdu Extension 6",
  "version": "6",
  "background":{
        "scripts": ["scripts/jquery-2.2.4.min.js","scripts/background.js"],
		"persistent": false
    },
	"browser_action":{
        "default_icon":"icon.png",
		"default_popup": "popup.html"
    },
  "permissions": [
          "tabs"
    ],
	  "content_scripts": [
		{
		  "matches": ["<all_urls>"],
		  "js": ["scripts/content.js"]
		}
	  ]
}




